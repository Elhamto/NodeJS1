{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": true,
      "noUnusedLocals": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "useUnknownInCatchVariables": false,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "target": "es6",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist",
      "lib": ["ES2016", "DOM"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }